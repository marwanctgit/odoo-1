<odoo>

    <record id = "sale_module_form_view" model ="ir.ui.view">
        <field name ="name">Sale Module Form</field>
        <field name ="model">sale.module</field>
        <field name ="arch" type = "xml">
            <form string ="Sale">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible='draft,done,cancelled'/>
                    <button name="action_done" string="New Button" type="object" class="oe_highlight" status="done"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name = "name" readonly= "True" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                        </group>
                        <group>
                            <field name="number"/>
                            <field name = "address"/>
                            <field name="example"

                        </group>
                    </group>
                    <notebook>
                        <page string="sale">
                            <field name="sale_lines_ids">
                               <tree editable = "bottom">
                                    <field name="product_id"/>
                                    <field name="description"/>
                                    <field name="quantity"/>
                                    <field name="unit_price"/>
                                    <field name="currency_id"/>
                                    <field name="subtotal"/>
                                </tree>
                            </field>
                            <group colspan="4">
                                <group class="oe_subtotal_footer_oe_right">
                                    <field name = "amount_total"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sale_module_action" model="ir.actions.act_window">
        <field name="name">Sale Module</field>
        <field name="res_model">sale.module</field>
        <field name="view_mode">tree,form</field>
    </record>


<menuitem id = "sale_module_action_menu" action="sale_module_action" name="sale"/>
           
</odoo>